<?xml version="1.0"?>
<config case="forward">
	<add_link source="../init/ocean.nc" dest="input.nc"/>
	<add_link source="../init/graph.info" dest="graph.info"/>

	<add_executable source="model" dest="ocean_model"/>
	<add_executable source="metis" dest="metis"/>

	<namelist name="namelist.ocean" mode="forward">
		<option name="config_run_duration">'10:00:00'</option>
<!-- split explicit
		<option name="config_dt">'00:01:00'</option>
		<option name="config_btr_dt">'0000_00:00:20'</option>
-->
		<option name="config_dt">'00:00:05'</option>
		<option name="config_time_integrator">'RK4'</option>
		<option name="config_mom_del4">2.0e4</option>
		<option name="config_use_mom_del4">.true.</option>
		<option name="config_use_wetting_drying">.true.</option>
		<option name="config_zero_drying_velocity">.true.</option>
		<option name="config_drying_min_cell_height">1.0e-3</option>
		<option name="config_check_ssh_consistency">.false.</option>
		<option name="config_vert_coord_movement">'impermeable_interfaces'</option>
	</namelist>

	<streams name="streams.ocean" keep="immutable" mode="forward">
		<template file="output.xml" path_base="script_core_dir" path="templates/streams"/>
		<stream name="output">
			<attribute name="output_interval">0000_00:02:00</attribute>
		</stream>
		<stream name="mesh">
			<attribute name="filename_template">input.nc</attribute>
		</stream>
		<stream name="input">
			<attribute name="filename_template">input.nc</attribute>
		</stream>
	</streams>

	<run_script name="run.py">
		<step executable="./metis">
			<argument flag="graph.info">6</argument>
		</step>
		<model_run procs="6" threads="1" namelist="namelist.ocean" streams="streams.ocean"/>
	</run_script>
</config>
